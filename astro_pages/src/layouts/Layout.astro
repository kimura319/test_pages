---
import SideBar from "../components/side_bar.astro"
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Sensor CSS</title>
	</head>
	<body>
		<div class="layout-root">
			<SideBar />
			<div class="main-area">
				<slot />
			</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background: #f4f7fb;
		font-family: 'Noto Sans', 'Arial', sans-serif;
		color: #222;
	}
	.layout-root {
		display: flex;
		min-height: 100vh;
		background: #f4f7fb;
		justify-content: center;
	}
	.main-area {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
		padding: 48px 0 32px 0;
		max-width: 900px;
		background: #fff;
		border-radius: 16px;
		box-shadow: 0 2px 16px #2563eb22;
		border: 1.5px solid #e0e7ef;
	}
	@media (max-width: 900px) {
		.main-area {
			max-width: 100%;
			border-radius: 0;
			box-shadow: none;
			padding: 24px 0 16px 0;
		}
		.layout-root {
			flex-direction: column;
			justify-content: flex-start;
		}
	}
</style>
