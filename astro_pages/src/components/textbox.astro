---
interface Props {
  label?: string;
  placeholder?: string;
  type?: "text" | "email" | "password" | "number" | "tel" | "url" | "search";
  id?: string;
  name?: string;
  pattern?: string;
  maxlength?: number;
  required?: boolean;
}

const { 
  label, 
  placeholder = "", 
  type = "text", 
  required = false, 
  id, 
  name,
  pattern,
  maxlength
} = Astro.props;
---

<div class="textbox-container">
  {label && <label for={id} class="textbox-label">{label}</label>}
  <input 
    type={type}
    id={id}
    name={name}
    pattern={pattern}
    maxlength={maxlength}
    placeholder={placeholder}
    required={required}
    class="textbox-input"
  />
</div>

<style>
  .textbox-container {
    margin-bottom: 5px;
  }

  .textbox-label {
    display: block;
    margin-bottom: 5px;
    color: #3b3157;
    font-size: 16px;
    font-weight: bold;
  }

  .textbox-input {
    display: block;
    width: 100%;
    padding: 12px 16px;
    border: 2px solid #e1e5e9;
    border-radius: 8px;
    font-size: 16px;
    background-color: #ffffff;
    color: #2A233E;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    box-sizing: border-box;
  }

  .textbox-input:focus {
    outline: none;
    border-color: #8e6eff;
    box-shadow: 0 0 0 3px rgba(255, 126, 51, 0.1);
  }

  .textbox-input::placeholder {
    color: #9ca3af;
  }

  .textbox-input:hover {
    border-color: #ab94ff;
  }

  .textbox-input:disabled {
    background-color: #f9fafb;
    border-color: #e5e7eb;
    color: #6b7280;
    cursor: not-allowed;
  }

  .textbox-input:read-only {
        background-color: #f9fafb;
        border-color: #e5e7eb;
        color: #717986;
        font-weight: 600;
        font-family: 'Noto Sans', 'Arial', sans-serif;
        opacity: 1;
        transition: background 0.2s, border 0.2s;
        cursor: not-allowed;
  }

</style>